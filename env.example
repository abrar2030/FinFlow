#
# FinFlow Microservices Environment Variables
# Based on review of common/config.ts, common/database.ts, and common/kafka.ts
#

# -----------------------------------------------------------------------------
# 1. APPLICATION & SECURITY
# -----------------------------------------------------------------------------
# Node environment (e.g., development, production, test)
NODE_ENV=development
# Secret key for signing JWTs (Used in auth-service)
JWT_SECRET=
# JWT expiration time (e.g., 1h, 7d)
JWT_EXPIRES_IN=1h
# JWT refresh token expiration time
JWT_REFRESH_EXPIRES_IN=7d
# Port for the primary service (e.g., auth-service)
PORT=3000

# -----------------------------------------------------------------------------
# 2. DATABASE (Prisma/PostgreSQL/MySQL)
# -----------------------------------------------------------------------------
# Database connection string for Prisma.
# Example for PostgreSQL: postgresql://user:password@host:port/dbname
# Example for MySQL: mysql://user:password@host:port/dbname
# NOTE: The specific database type is not explicitly defined, but Prisma supports many.
DATABASE_URL=

# -----------------------------------------------------------------------------
# 3. MESSAGE BROKER (Kafka)
# -----------------------------------------------------------------------------
# Comma-separated list of Kafka broker addresses
KAFKA_BROKERS=localhost:9092
# Client ID for the Kafka connection (should be unique per service)
KAFKA_CLIENT_ID=auth-service
# Group ID for the Kafka consumer (should be unique per service)
KAFKA_GROUP_ID=auth-service-group

# -----------------------------------------------------------------------------
# 4. EXTERNAL FINANCIAL SERVICES
# -----------------------------------------------------------------------------
# Stripe (Payment processing)
STRIPE_API_KEY=

# -----------------------------------------------------------------------------
# 5. CLOUD STORAGE (Implied by microservice architecture)
# -----------------------------------------------------------------------------
# AWS Credentials (if used for file storage or other services)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# -----------------------------------------------------------------------------
# 6. MONITORING & LOGGING
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=
# Logging level (e.g., info, debug, warn, error)
LOG_LEVEL=info
